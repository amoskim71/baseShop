<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/fragment_profile_fragment_addresses_cell_shadow"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/fragment_profile_fragment_addresses_cell_background"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>

