<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_profile_sections"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_profile_section_orders"
            android:background="@drawable/fragment_profile_section_selector"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fragment_profile_section_icon_orders" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Заказы"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_profile_section_info"
            android:background="@drawable/fragment_profile_section_selector"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="1dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fragment_profile_section_icon_personal_information" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Личное"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_profile_section_addresses"
            android:background="@drawable/fragment_profile_section_selector"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:padding="1dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fragment_profile_section_icon_addresses" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"

                android:text="Адреса"/>
        </LinearLayout>
</LinearLayout>
