<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/fragment_anonim_basket_icon_sign"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fragment_anonim_basket_icon_sign"
        />

    <TextView
        android:id="@+id/fragment_anonim_basket_title"
        android:layout_below="@id/fragment_anonim_basket_icon_sign"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="45sp"
        android:text="Упс("
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/fragment_anonim_basket_desc"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fragment_anonim_basket_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:text="Похоже мы не знакомы.\nНу к счастью , это можно исправить"/>

    <ImageView
        android:id="@+id/fragment_anonim_basket_icon_arrow"
        android:layout_below="@id/fragment_anonim_basket_desc"
        android:layout_marginTop="30dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fragment_anonim_basket_icon_arrow"
        />

    <Button
        android:id="@+id/fragment_anonim_basket_button_entry"
        android:background="@drawable/fragment_profile_fragment_info_button_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Войти"
        android:textAllCaps="false"
        android:layout_below="@+id/fragment_anonim_basket_icon_arrow"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        />


</RelativeLayout>